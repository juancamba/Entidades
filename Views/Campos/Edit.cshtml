@model Entidades.Models.Campo

@{
    ViewData["Title"] = "Editar Campo";
}


<h2 class="text-primary">Editar campo</h2>
<form method="post" asp-action="Edit">
    <div class="row px-2 offset-1 border">       
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Nombre"></label>
            </div>
            <div class="col-8">
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese nombre de campo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">

            <div class="col-8">
                <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model.Id">Actualizar</button>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-success form-control">Volver a lista</a>
            </div>
        </div>
    </div>


</form>