@model Entidades.Models.ViewModels.ListaEntidadesVM

@{
    ViewData["Title"] = "Lista de entidades";
}

<div class="row">
    <div class="container mt-3">

        <h3>Lista de entidades</h3>

        <table class="table table-striped table-bordered">
            <tr>
                <th>Nombre</th>
                <th>Datos</th>
            </tr>
        @foreach (var item in @Model.ListaEntidades)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Datos</td>
                </tr>
            }
        </table>

    </div>
</div>
