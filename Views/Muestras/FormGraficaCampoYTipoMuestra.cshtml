@model Entidades.Models.ViewModels.TipoMuestraCampoVM
<h2 class="mt-3 text-primary">Gráfica por campo y tipo de muestra</h2>
<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post" asp-action="GraficaPorCampoYTipoMuestra">
                <div class="form-group mt-3">
                    <label for="exampleInputPassword1">Campo de investigación</label>
                    <select id="campo" class="form-select" aria-label="Campo" name="idCampo">
                        <option value="0">Seleccione un campo</option>
                        @foreach (var item in Model.Campos)
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }

                    </select>
                </div>
                <div class="form-group mt-3">
                    <label for="tipoMuestra">Tipo de muestra</label>
                    <select id="tipoMuestra" class="form-select" aria-label="Tipo de muestra" name="idTipoMuestra">
                        <option value="0">Seleccione un tipo de muestra</option>
                        @foreach (var item in Model.TiposMuestra)
                        {
                            <option value="@item.Id">@item.Nombre</option>
                        }

                    </select>

                </div>
                

                <button id="btnEnviar" class="btn btn-primary mt-3">Submit</button>
            </form>


        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div id="informacionEstadistica">
        </div>
    </div>
</div>
<div class="container ">
    <div class="row mt-3">
        <div class="col-12">

            <div class="chart-container">
                <canvas id="media-bar-chart" width="100" height="500"></canvas>
            </div>
        </div>


    </div>
</div>
@section Scripts{
    <script src="/js/pintarGraficoEstadistico.js">  </script>
}